{
  "name": "react-scaffold",
  "version": "1.0.0",
  "description": "An React Scaffold featuring React (Tests, Dev/Prod), Visual Basic 6.0, Mocha, NYC, TypeScript, TsLint, and Webpack2 by @ngParty Team",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:cover": "jest --coverage",
    "test": "mocha --require config/setup-browser-env --watch-extensions tsx,ts --colors src/**/*.spec.ts*",
    "test:watch": "npm run test -- --watch",
    "cover": "nyc npm run test",
    "cover:watch": "nodemon --quiet --watch src --ext ts,tsx --exec npm run cover",
    "check-coverage": "nyc --check-coverage --statements 80 --branches 80 --functions 80 --lines 80 npm test",
    "lint": "tslint \"src/**/*.tsx\" \"src/**/*.ts\" --exclude \"src/**/*.d.ts\"",
    "start": "webpack-dev-server --env.dev --hot",
    "build": "npm run check-coverage && rimraf dist && webpack --env.prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngParty/React-scaffold.git"
  },
  "keywords": [
    "react",
    "typescript",
    "webpack2",
    "jest"
  ],
  "author": "@ngPartyCz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ngParty/React-scaffold/issues"
  },
  "homepage": "https://github.com/ngParty/React-scaffold#readme",
  "jest": {
    "bail": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "scriptPreprocessor": "<rootDir>/config/preprocessor.js",
    "testRegex": "<rootDir>/src/.*\\.spec\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/fileMock.js",
      "^.+\\.(css|less|sass)$": "identity-obj-proxy"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "extension": [
      ".tsx",
      ".ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ],
    "include": [
      "src/**"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "2.4.36",
    "@types/jest": "15.1.32",
    "@types/react-addons-test-utils": "0.14.15",
    "awesome-typescript-loader": "2.2.4",
    "chai": "3.5.0",
    "css-loader": "0.25.0",
    "enzyme": "2.4.1",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "html-webpack-plugin": "2.22.0",
    "jsdom": "9.6.0",
    "jest": "16.0.1",
    "identity-obj-proxy": "3.0.0",
    "postcss-cssnext": "2.8.0",
    "postcss-loader": "0.13.0",
    "progress-bar-webpack-plugin": "1.9.0",
    "react-addons-test-utils": "15.3.0",
    "rimraf": "2.5.4",
    "sinon": "1.17.6",
    "style-loader": "0.13.1",
    "ts-node": "1.4.3",
    "tslint": "3.15.1",
    "tslint-react": "1.0.0",
    "typescript": "2.0.3",
    "webpack": "2.1.0-beta.25",
    "webpack-config-utils": "2.1.0",
    "webpack-dev-server": "2.1.0-beta.9"
  },
  "dependencies": {
    "@types/react": "0.14.41",
    "@types/react-dom": "0.14.18",
    "@types/react-router": "2.0.38",
    "react": "15.3.2",
    "react-dom": "15.3.2",
    "react-router": "2.8.1"
  }
}
